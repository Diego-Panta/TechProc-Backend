{
  "info": {
    "name": "Departments CRUD API",
    "description": "Colección de endpoints para el CRUD de Departments",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. GET - Listar todos los departments",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/infraestructura/departments",
          "host": ["{{base_url}}"],
          "path": ["api", "infraestructura", "departments"]
        },
        "description": "Obtiene la lista completa de todos los departamentos"
      }
    },
    {
      "name": "2. POST - Crear nuevo department",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"department_name\": \"Recursos Humanos\",\n  \"description\": \"Departamento encargado de la gestión del personal y talento humano\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/infraestructura/departments",
          "host": ["{{base_url}}"],
          "path": ["api", "infraestructura", "departments"]
        },
        "description": "Crea un nuevo departamento"
      }
    },
    {
      "name": "3. GET - Obtener department por ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/infraestructura/departments/1",
          "host": ["{{base_url}}"],
          "path": ["api", "infraestructura", "departments", "1"]
        },
        "description": "Obtiene un departamento específico por su ID. Incluye relaciones con positions y employees."
      }
    },
    {
      "name": "4. PUT - Actualizar department completo",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"department_name\": \"Recursos Humanos y Gestión del Talento\",\n  \"description\": \"Departamento encargado de la gestión integral del personal, desarrollo organizacional y talento humano\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/infraestructura/departments/1",
          "host": ["{{base_url}}"],
          "path": ["api", "infraestructura", "departments", "1"]
        },
        "description": "Actualiza todos los campos de un departamento existente"
      }
    },
    {
      "name": "5. PATCH - Actualizar department parcialmente",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"description\": \"Nueva descripción del departamento\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/infraestructura/departments/1",
          "host": ["{{base_url}}"],
          "path": ["api", "infraestructura", "departments", "1"]
        },
        "description": "Actualiza solo los campos específicos de un departamento"
      }
    },
    {
      "name": "6. DELETE - Eliminar department",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/infraestructura/departments/1",
          "host": ["{{base_url}}"],
          "path": ["api", "infraestructura", "departments", "1"]
        },
        "description": "Elimina un departamento por su ID"
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    }
  ]
}
